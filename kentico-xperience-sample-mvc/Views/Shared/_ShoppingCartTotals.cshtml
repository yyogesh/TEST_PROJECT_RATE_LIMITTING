@using CMS.Commerce
@using DancingGoat.Commerce
@using DancingGoat.Models

@model ShoppingCartViewModel

<div class="cart-total">
    <div class="cart-total-viewer">
        <div class="summary-title">
            <span>@HtmlLocalizer["Order summary"]</span>
        </div>
        @if (Model.TotalDiscount > 0)
        {
            <div class="cart-item-viewer">
                <div class="label">
                    <span>@HtmlLocalizer["Previous price"]</span>
                </div>
                <div class="value previous-price">
                    <price>@Model.SubtotalPrice</price>
                </div>
            </div>
            <div class="cart-totals-summary">
                <div class="label">
                    <span>@HtmlLocalizer["You will save"]</span>
                </div>
                <div class="value">
                    <price>-@Model.TotalDiscount</price>
                </div>
            </div>
        }
        <div class="cart-grand-total">
            <div class="label">
                <span>@HtmlLocalizer["Total amount"]</span>
            </div>
            <div class="value">
                <price>@Model.TotalPrice</price>
            </div>
        </div>
    </div>
</div>
